---
interface Props {
  title: string;
  description: string;
  stack: Array<string>;
  preview?: string | null;
  repo?: string | null;
  img: string;
}
const { title, description, stack, img, preview, repo } = Astro.props;
---

<section
  class="mb-12 md:p-4 sm:p-6 rounded-lg bg-white dark:bg-blue-900/75 bg-zinc-600/35 shadow-sm pb-4 font-diagraphetc"
>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
    <!-- Image column -->
    <div class="order-1 md:order-1">
      <div class="md:-mx-2 overflow-hidden rounded-lg shadow-md">
        <img
          src={img}
          alt={`Imagen del proyecto ${title}`}
          width="800"
          height="600"
          loading="lazy"
          decoding="async"
          class="w-full h-56 md:h-[320px] object-cover transition-transform duration-300 ease-out hover:scale-105 block"
        />
      </div>
    </div>

    <!-- Content column -->
    <div class="order-2 md:order-2 p-4 md:p-6">
      <h3
        class="font-mooxy tracking-[1px] text-xl md:text-2xl text-gray-900 dark:text-gray-100 text-center md:text-left"
      >
        {title}
      </h3>
      <p
        class="mt-3 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed text-center md:text-left"
      >
        {description}
      </p>

      <!-- Tech stack badges with SVG icons -->
      <div class="mt-4 flex flex-wrap gap-3 justify-center md:justify-start">
        {
          stack.map((item) => (
            <span class="flex items-center gap-2 bg-slate-100 dark:bg-slate-800 text-slate-800 dark:text-slate-200 px-2 sm:px-3 py-1 rounded-full text-sm font-medium">
              <img
                src={`https://cdn.simpleicons.org/${item}/${item}`}
                alt={`${item} icon`}
                class="w-5 h-5"
              />
              {item.charAt(0).toUpperCase() + item.slice(1)}
            </span>
          ))
        }
      </div>

      <!-- Action buttons -->
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        {
          preview ? (
            <a
              href={preview}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex w-full sm:w-auto justify-center items-center gap-2 px-4 py-2 rounded-md bg-primary dark:bg-stone-900/85 text-white hover:bg-primary/90 dark:hover:bg-primary/20 transition text-sm font-medium shadow-sm"
              aria-label={`Ver deploy de ${title}`}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-world"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                <path d="M3.6 9h16.8" />
                <path d="M3.6 15h16.8" />
                <path d="M11.5 3a17 17 0 0 0 0 18" />
                <path d="M12.5 3a17 17 0 0 1 0 18" />
              </svg>
              Ver proyecto
            </a>
          ) : null
        }

        {
          repo ? (
            <a
              href={repo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex w-full sm:w-auto justify-center items-center gap-2 px-4 py-2 rounded-md border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-200 bg-slate-50 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-900 transition text-sm font-medium"
              aria-label={`Ver repositorio de ${title}`}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-code"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M7 8l-4 4l4 4" />
                <path d="M17 8l4 4l-4 4" />
                <path d="M14 4l-4 16" />
              </svg>
              Ver c√≥digo
            </a>
          ) : null
        }
      </div>
    </div>
  </div>
</section>
